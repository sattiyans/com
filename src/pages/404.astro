---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
---

<PageLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <Container>
    <div class="min-h-[60vh] flex flex-col items-center justify-center text-center">
      <div class="animate mb-8">
        <h1 class="text-6xl md:text-8xl font-bold text-black dark:text-white mb-4">
          404
        </h1>
        <h2 class="text-2xl md:text-3xl font-semibold text-gray-600 dark:text-gray-300 mb-4">
          Page Not Found
        </h2>
        <p class="text-lg text-gray-500 dark:text-gray-400 mb-8 max-w-md">
          The page you're looking for doesn't exist or has been moved. 
          Let's get you back on track.
        </p>
      </div>
      
      <div class="animate">
        <Link 
          href="/" 
          class="inline-block px-6 py-3 bg-black dark:bg-white text-white dark:text-black rounded-lg hover:bg-gray-800 dark:hover:bg-gray-200 transition-colors duration-300 font-medium"
        >
          Go Home
        </Link>
      </div>
      
      <div class="animate mt-12 text-sm text-gray-400 dark:text-gray-500">
        <p>Need help? <Link href={`mailto:${SITE.EMAIL}`} class="text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white transition-colors duration-200">Contact me</Link></p>
      </div>
    </div>
  </Container>
</PageLayout>
