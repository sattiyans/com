---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import Link from "@components/Link.astro";
import ProjectCard from "@components/ProjectCard.astro";
import SkillsSection from "@components/SkillsSection.astro";
import RecommendationsSection from "@components/RecommendationsSection.astro";
import AvailabilityStatus from "@components/AvailabilityStatus.astro";
import PersonalStats from "@components/PersonalStats.astro";
import { SITE, HOME, SOCIALS } from "@consts";

const allwork = (await getCollection("work"))
  .sort((a, b) => new Date(b.data.dateStart).valueOf() - new Date(a.data.dateStart).valueOf())
  .slice(0,SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft && !project.data.password) // Hide password-protected projects from home page
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);

