---
import Head from '@components/Head.astro';
import { SITE } from '@consts';
---

<!doctype html>
<html lang="en">
  <head>
    <Head title="Ask about Sattiyan" description="Chat with AI about Sattiyan's portfolio" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html {
        height: 100%;
        height: 100dvh; /* Dynamic viewport height for mobile */
        overflow: hidden;
      }
      
      body {
        background: #000000;
        color: #ffffff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        height: 100%;
        height: 100dvh; /* Dynamic viewport height for mobile */
        overflow: hidden;
        position: fixed;
        width: 100%;
      }
    </style>
  </head>
  <body>
    <div class="chat-page-container">
    <div class="chat-header">
      <div>
        <div style="display: flex; align-items: center; gap: 0.75rem;">
          <div class="ai-avatar">
            <svg style="width: 1.5rem; height: 1.5rem; color: #3b82f6;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
          </div>
          <div>
            <h1 style="font-size: 1.125rem; font-weight: 600; color: #ffffff; margin: 0;">Luna</h1>
            <p style="font-size: 0.75rem; color: #666666; margin: 0;">Ask me about Sattiyan's work</p>
          </div>
        </div>
      </div>
    </div>

    <div id="chat-messages" class="chat-messages">
      <div class="welcome-message">
        <div class="message-bubble bot-message">
          <div class="message-content">
            <p>Hi! I'm Luna, an AI assistant. Ask me anything about Sattiyan's projects, work experience, skills, or blog posts!</p>
          </div>
          <div class="message-time"></div>
        </div>
      </div>
      <div id="suggestions-container" class="suggestions-container">
        <div class="suggestions-label">Try asking:</div>
        <div class="suggestions-chips">
          <button class="suggestion-chip" data-suggestion="What projects has Sattiyan worked on?">What projects has Sattiyan worked on?</button>
          <button class="suggestion-chip" data-suggestion="Tell me about Sattiyan's skills">Tell me about Sattiyan's skills</button>
            <button class="suggestion-chip" data-suggestion="What tools has Sattiyan developed?">What tools has Sattiyan developed?</button>
          <button class="suggestion-chip" data-suggestion="I want to get in touch">I want to get in touch</button>
          <button class="suggestion-chip" data-suggestion="I'm interested in hiring Sattiyan">I'm interested in hiring Sattiyan</button>
          <button class="suggestion-chip" data-suggestion="What is Nadi?">What is Nadi?</button>
        </div>
      </div>
    </div>

    <div class="chat-input-container">
      <form id="chat-form" onsubmit="event.preventDefault(); return false;">
        <div class="chat-input-wrapper">
          <input 
            type="text" 
            id="chat-input" 
            placeholder="Type your message..." 
            class="chat-input"
            autocomplete="off"
          />
          <button type="button" id="chat-send-btn" class="chat-send-btn" aria-label="Send message">
            <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
          </button>
        </div>
      </form>
      <div class="chat-footer" style="text-align: center; margin-top: 1rem; padding: 0 1rem;">
        <p style="font-size: 0.625rem; color: #666; margin: 0;">
          Powered by <span style="color: #3b82f6; font-weight: 600;">Nadi</span> — AI Solutions Platform by <a href="https://dotkod.com/text" target="_blank" rel="noopener noreferrer" style="color: #3b82f6; text-decoration: none; font-weight: 500;">Dotkod Solutions</a>
        </p>
      </div>
    </div>
  </div>
