---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime, extractHeadings } from "@lib/utils";
import Link from "@components/Link.astro";
import TableOfContents from "@components/TableOfContents.astro";

export async function getStaticPaths() {
  const projects = (await getCollection("projects"))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: project,
  }));
}
type Props = CollectionEntry<"projects">;

const project = Astro.props;
const { Content } = await project.render();

// Support both old demoURL and new projectURL for backward compatibility
const projectURL = project.data.projectURL || project.data.demoURL;

// Extract headings for table of contents
const headings = extractHeadings(project.body);

// Helper function to normalize image paths for projects folder
// If it's a full URL, use it as-is
// If it starts with '/', use it as-is (absolute path)
// Otherwise, assume it's in public/projects/ folder
function normalizeProjectImagePath(path: string): string {
  if (path.startsWith('http://') || path.startsWith('https://')) {
    return path; // Full URL
  }
  if (path.startsWith('/')) {
    return path; // Already absolute path
  }
  // Assume it's in public/projects/ folder
  return `/projects/${path}`;
}

// Check if project is password protected
const isProtected = !!project.data.password;
const projectSlug = project.slug;
const correctPassword = project.data.password || '';
---

<PageLayout title={project.data.title} description={project.data.description}>
  <Container>
    <div class="space-y-8">
      <!-- Breadcrumb -->
      <nav class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400">
        <a 
          href="/"
          class="hover:text-black dark:hover:text-white transition-colors duration-200"
        >
          Home
        </a>
        <span>/</span>
        <a 
          href="/projects"
          class="hover:text-black dark:hover:text-white transition-colors duration-200"
        >
          Projects
        </a>
        <span>/</span>
        <span class="text-black dark:text-white font-medium">{project.data.title}</span>
      </nav>

      {isProtected && (
        <div id="password-protection" class="hidden">
          <div class="max-w-md mx-auto mt-8 p-6 rounded-lg border border-black/15 dark:border-white/20">
            <div class="text-center mb-6">
              <svg class="w-12 h-12 mx-auto mb-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              <h2 class="text-xl font-semibold text-black dark:text-white mb-2">Protected Project</h2>
              <p class="text-sm text-gray-600 dark:text-gray-400">This project is password protected. Please enter the password to view the content.</p>
            </div>
            <form id="password-form" class="space-y-4">
              <div>
                <label for="project-password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  Password
                </label>
                <input
                  type="password"
                  id="project-password"
                  name="password"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-black/15 dark:border-white/20 bg-white dark:bg-gray-800 text-black dark:text-white focus:outline-none focus:ring-2 focus:ring-black/20 dark:focus:ring-white/20"
                  placeholder="Enter password"
                  autocomplete="off"
                />
              </div>
              <div id="password-error" class="hidden text-sm text-red-600 dark:text-red-400"></div>
              <button
                type="submit"
                class="w-full px-4 py-2 rounded-lg bg-black dark:bg-white text-white dark:text-black font-medium hover:bg-gray-800 dark:hover:bg-gray-200 transition-colors duration-200"
              >
                Unlock Project
              </button>
            </form>
          </div>
        </div>
      )}

      <div id="project-content" class={isProtected ? 'hidden' : ''}>

      <!-- Project Header -->
      <div class="space-y-4">
        <h1 class="text-2xl font-semibold text-black dark:text-white">
          {project.data.title}
        </h1>
        <p class="text-gray-600 dark:text-gray-400">
          {project.data.description}
        </p>
        
        <!-- Meta Information -->
        <div class="flex flex-wrap items-center gap-3 text-sm text-gray-600 dark:text-gray-400">
          <span>{project.data.date.getFullYear()}</span>
          <span>&bull;</span>
          <span>{readingTime(project.body)}</span>
          {project.data.role && (
            <>
              <span>&bull;</span>
              <span>{project.data.role}</span>
            </>
          )}
          {projectURL && (
            <>
              <span>&bull;</span>
              <Link href={projectURL} external class="hover:text-black dark:hover:text-white transition-colors no-underline">
                View Project
              </Link>
            </>
          )}
          {project.data.repoURL && (
            <>
              <span>&bull;</span>
              <Link href={project.data.repoURL} external class="hover:text-black dark:hover:text-white transition-colors no-underline">
                View Code
              </Link>
            </>
          )}
        </div>

        <!-- Client and Project Owner -->
        {(project.data.client || project.data.projectOwner) && (
          <div class="flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-400">
            {project.data.client && <span><span class="font-medium">Client:</span> {project.data.client}</span>}
            {project.data.projectOwner && <span><span class="font-medium">Owner:</span> {project.data.projectOwner}</span>}
          </div>
        )}

        <!-- Tech Stack -->
        {project.data.techStack && project.data.techStack.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-8">
            {project.data.techStack.map((tech) => (
              <span class="px-2 py-1 rounded text-xs bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 border border-blue-200 dark:border-blue-700/50">
                {tech}
              </span>
            ))}
          </div>
        )}
      </div>

      <!-- Screenshots Slider -->
      {project.data.screenshots && project.data.screenshots.length > 0 && (
        <div class="mt-8 mb-8">
          <div class="screenshot-slider flex flex-col md:flex-row gap-4" data-slider-id={`slider-${project.slug}`}>
            <!-- Thumbnail Navigation (Left Side) -->
            {project.data.screenshots.length > 1 && (
              <div class="flex md:flex-col gap-2 overflow-x-auto md:overflow-x-visible md:overflow-y-auto pb-2 md:pb-0 order-2 md:order-1">
                {project.data.screenshots.map((screenshot, index) => (
                  <button
                    class={`screenshot-thumb flex-shrink-0 w-16 h-16 md:w-20 md:h-20 rounded-lg overflow-hidden border-2 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-black/20 dark:focus:ring-white/20 hover:border-black/30 dark:hover:border-white/30 ${index === 0 ? 'border-black/50 dark:border-white/50' : 'border-transparent'}`}
                    data-index={index}
                    aria-label={`View screenshot ${index + 1}`}
                  >
                    <img
                      src={normalizeProjectImagePath(screenshot)}
                      alt={`Thumbnail ${index + 1}`}
                      class="w-full h-full object-cover"
                      loading="lazy"
                    />
                  </button>
                ))}
              </div>
            )}
            
            <!-- Main Image Display -->
            <div class="relative overflow-hidden rounded-lg border border-black/15 dark:border-white/20 bg-gray-100 dark:bg-gray-900 flex-1 order-1 md:order-2">
              <div class="screenshot-main-container relative aspect-video">
                  {project.data.screenshots.map((screenshot, index) => (
                    <img
                      src={normalizeProjectImagePath(screenshot)}
                      alt={`${project.data.title} screenshot ${index + 1}`}
                      class={`screenshot-main w-full h-full object-contain transition-opacity duration-300 ${index === 0 ? 'opacity-100' : 'opacity-0 absolute inset-0'}`}
                      data-index={index}
                      loading={index === 0 ? 'eager' : 'lazy'}
                    />
                  ))}
              </div>
              
              <!-- Navigation Arrows -->
              {project.data.screenshots.length > 1 && (
                <>
                  <button 
                    class="screenshot-prev absolute left-2 top-1/2 -translate-y-1/2 p-2 rounded-full bg-black/50 dark:bg-white/50 text-white dark:text-black hover:bg-black/70 dark:hover:bg-white/70 transition-colors duration-200"
                    aria-label="Previous screenshot"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                  </button>
                  <button 
                    class="screenshot-next absolute right-2 top-1/2 -translate-y-1/2 p-2 rounded-full bg-black/50 dark:bg-white/50 text-white dark:text-black hover:bg-black/70 dark:hover:bg-white/70 transition-colors duration-200"
                    aria-label="Next screenshot"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </button>
                </>
              )}
            </div>
          </div>
        </div>
      )}

      <!-- Content with TOC -->
      <div class={`grid grid-cols-1 lg:grid-cols-[1fr_280px] gap-8 ${!project.data.screenshots?.length ? 'mt-8' : ''}`}>
        <!-- Main Content -->
        <article class="prose prose-gray dark:prose-invert max-w-none prose-headings:scroll-mt-20">
          <Content />
        </article>

        <!-- Table of Contents -->
        {headings.length > 0 && (
          <aside class="hidden lg:block">
            <TableOfContents headings={headings} />
          </aside>
        )}
      </div>
      </div>
    </div>
  </Container>
</PageLayout>

{isProtected && (
  <script is:inline set:html={`
    (function() {
      const storageKey = 'project_unlocked_${projectSlug}';
      const correctPassword = '${correctPassword}';
      const passwordForm = document.getElementById('password-form');
      const passwordInput = document.getElementById('project-password');
      const passwordError = document.getElementById('password-error');
      const passwordProtection = document.getElementById('password-protection');
      const projectContent = document.getElementById('project-content');

      // Check if already unlocked
      const isUnlocked = localStorage.getItem(storageKey) === 'true';
      
      if (isUnlocked) {
        // Show content, hide password form
        if (passwordProtection) passwordProtection.classList.add('hidden');
        if (projectContent) projectContent.classList.remove('hidden');
      } else {
        // Show password form, hide content
        if (passwordProtection) passwordProtection.classList.remove('hidden');
        if (projectContent) projectContent.classList.add('hidden');
      }

      // Handle password form submission
      if (passwordForm) {
        passwordForm.addEventListener('submit', (e) => {
          e.preventDefault();
          const enteredPassword = passwordInput.value.trim();

          if (enteredPassword === correctPassword) {
            // Correct password - unlock project
            localStorage.setItem(storageKey, 'true');
            if (passwordProtection) passwordProtection.classList.add('hidden');
            if (projectContent) projectContent.classList.remove('hidden');
            if (passwordError) passwordError.classList.add('hidden');
            passwordInput.value = '';
          } else {
            // Wrong password - show error
            if (passwordError) {
              passwordError.textContent = 'Incorrect password. Please try again.';
              passwordError.classList.remove('hidden');
            }
            passwordInput.value = '';
            passwordInput.focus();
          }
        });
      }
    })();
  `}></script>
)}

<script is:inline>
  // Add IDs to headings for anchor links
  document.querySelectorAll('article h2, article h3').forEach((heading) => {
    const text = heading.textContent || '';
    const slug = text
      .toLowerCase()
      .replace(/[^\w\s-]/g, '')
      .replace(/\s+/g, '-')
      .replace(/-+/g, '-')
      .trim();
    heading.id = slug;
  });
</script>

{project.data.screenshots && project.data.screenshots.length > 1 && (
  <script is:inline set:html={`
    (function() {
      const sliderId = 'slider-${project.slug}';
      const totalImages = ${project.data.screenshots.length};
      const slider = document.querySelector(\`[data-slider-id="\${sliderId}"]\`);
      if (!slider) return;
      
      let currentIndex = 0;
      const mainImages = slider.querySelectorAll('.screenshot-main');
      const thumbnails = slider.querySelectorAll('.screenshot-thumb');
      const prevBtn = slider.querySelector('.screenshot-prev');
      const nextBtn = slider.querySelector('.screenshot-next');
      
      function updateSlider(index) {
        mainImages.forEach((img, i) => {
          if (i === index) {
            img.classList.remove('opacity-0', 'absolute');
            img.classList.add('opacity-100');
          } else {
            img.classList.remove('opacity-100');
            img.classList.add('opacity-0', 'absolute');
          }
        });
        
        thumbnails.forEach((thumb, i) => {
          if (i === index) {
            thumb.classList.add('border-black/50', 'dark:border-white/50');
            thumb.classList.remove('border-transparent');
          } else {
            thumb.classList.remove('border-black/50', 'dark:border-white/50');
            thumb.classList.add('border-transparent');
          }
        });
      }
      
      function goToSlide(index) {
        currentIndex = index;
        updateSlider(currentIndex);
      }
      
      function nextSlide() {
        currentIndex = (currentIndex + 1) % totalImages;
        updateSlider(currentIndex);
      }
      
      function prevSlide() {
        currentIndex = (currentIndex - 1 + totalImages) % totalImages;
        updateSlider(currentIndex);
      }
      
      if (prevBtn) prevBtn.addEventListener('click', prevSlide);
      if (nextBtn) nextBtn.addEventListener('click', nextSlide);
      
      thumbnails.forEach((thumb, index) => {
        thumb.addEventListener('click', () => goToSlide(index));
      });
      
      slider.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') prevSlide();
        if (e.key === 'ArrowRight') nextSlide();
      });
      
      updateSlider(0);
    })();
  `}></script>
)}