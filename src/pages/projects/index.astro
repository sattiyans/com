---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import ProjectCard from "@components/ProjectCard.astro";
import { PROJECTS } from "@consts";

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<PageLayout title={PROJECTS.TITLE} description={PROJECTS.DESCRIPTION}>
  <Container>
    <div class="space-y-8">
      <!-- Breadcrumb -->
      <nav class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400">
        <a 
          href="/"
          class="hover:text-black dark:hover:text-white transition-colors duration-200"
        >
          Home
        </a>
        <span>/</span>
        <span class="text-black dark:text-white font-medium">Projects</span>
      </nav>

      <!-- Header -->
      <div class="space-y-4">
        <h1 class="animate text-2xl font-semibold text-black dark:text-white">
          Projects
        </h1>
      </div>
      <ul class="animate flex flex-col gap-6">
        {
          projects.map((project) => (
            <li>
              <ProjectCard project={project} />
            </li>
          ))
        }
      </ul>
    </div>
  </Container>
</PageLayout>
