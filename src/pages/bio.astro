<script is:inline>
  let latestFilmReviewExpanded = false;

  // Load dynamic stats
  async function loadStats() {
    // Load latest Letterboxd film card + platform count
    try {
      const letterboxdStatsEl = document.getElementById('letterboxd-stats');
      const latestFilmTitleEl = document.getElementById('latest-film-title');
      const latestFilmMetaEl = document.getElementById('latest-film-meta');
      const latestFilmRatingEl = document.getElementById('latest-film-rating');
      const latestFilmReviewTextEl = document.getElementById('latest-film-review-text');
      const latestFilmExpandBtnEl = document.getElementById('latest-film-expand-btn');
      const latestFilmPosterEl = document.getElementById('latest-film-poster');
      const latestFilmPosterLinkEl = document.getElementById('latest-film-poster-link');
      const latestFilmLoadingEl = document.getElementById('latest-film-loading');
      const latestFilmContentEl = document.getElementById('latest-film-content');

      const letterboxdRecentResponse = await fetch('/api/letterboxd');
      if (letterboxdRecentResponse.ok) {
        const letterboxdRecentData = await letterboxdRecentResponse.json();
        const items = Array.isArray(letterboxdRecentData?.items)
          ? letterboxdRecentData.items
          : Array.isArray(letterboxdRecentData)
            ? letterboxdRecentData
            : [];

        if (items.length > 0) {
          const latestFilm = items
            .map((item) => ({
              ...item,
              watchedDate: item?.watchedDate ? new Date(item.watchedDate) : new Date(0)
            }))
            .sort((a, b) => b.watchedDate.getTime() - a.watchedDate.getTime())[0];

          if (latestFilm?.title && latestFilmTitleEl && latestFilmMetaEl && latestFilmRatingEl) {
            latestFilmTitleEl.textContent = latestFilm.title;
            const watchedOn = formatWatchedDate(latestFilm.watchedDate);
            const yearText = latestFilm.year ? `${latestFilm.year}` : '';
            latestFilmMetaEl.textContent = yearText && watchedOn
              ? `${yearText} · ${watchedOn}`
              : watchedOn
                ? watchedOn
                : yearText;
            latestFilmRatingEl.textContent = latestFilm.rating
              ? `${formatRating(latestFilm.rating)}`
              : 'Not rated';
            if (latestFilmReviewTextEl) {
              const reviewText = latestFilm.reviewText?.trim() || 'No written review text.';
              latestFilmReviewTextEl.textContent = reviewText;
              updateLatestFilmExpandState(reviewText);
            } else if (latestFilmExpandBtnEl instanceof HTMLButtonElement) {
              latestFilmExpandBtnEl.classList.add('hidden');
            }

            if (latestFilm?.posterUrl && latestFilmPosterEl instanceof HTMLImageElement) {
              latestFilmPosterEl.src = latestFilm.posterUrl;
              latestFilmPosterEl.alt = `Poster for ${latestFilm.title}`;
            }

            if (latestFilm?.url) {
              if (latestFilmPosterLinkEl instanceof HTMLAnchorElement) {
                latestFilmPosterLinkEl.href = latestFilm.url;
              }
            }

            if (latestFilmLoadingEl) latestFilmLoadingEl.classList.add('hidden');
            if (latestFilmContentEl) {
              latestFilmContentEl.classList.remove('hidden');
              latestFilmContentEl.classList.add('flex');
            }
          }
        }
      }

      const letterboxdCountResponse = await fetch('/api/letterboxd-stats');
      if (letterboxdCountResponse.ok && letterboxdStatsEl) {
        const letterboxdCountData = await letterboxdCountResponse.json();
        if (letterboxdCountData.success && letterboxdCountData.movieCount > 0) {
          letterboxdStatsEl.textContent = `${letterboxdCountData.movieCount.toLocaleString()}+ films watched`;
        } else {
          letterboxdStatsEl.textContent = 'Film reviews & ratings';
        }
      }
    } catch (error) {
      console.error('Error loading Letterboxd stats:', error);
      const letterboxdStatsEl = document.getElementById('letterboxd-stats');
      if (letterboxdStatsEl) {
        letterboxdStatsEl.textContent = 'Film reviews & ratings';
      }

      const latestFilmTitleEl = document.getElementById('latest-film-title');
      const latestFilmMetaEl = document.getElementById('latest-film-meta');
      const latestFilmRatingEl = document.getElementById('latest-film-rating');
      const latestFilmReviewTextEl = document.getElementById('latest-film-review-text');
      const latestFilmExpandBtnEl = document.getElementById('latest-film-expand-btn');
      const latestFilmLoadingEl = document.getElementById('latest-film-loading');
      const latestFilmContentEl = document.getElementById('latest-film-content');
      if (latestFilmTitleEl) latestFilmTitleEl.textContent = 'Latest film unavailable';
      if (latestFilmMetaEl) latestFilmMetaEl.textContent = '';
      if (latestFilmRatingEl) latestFilmRatingEl.textContent = '-';
      if (latestFilmReviewTextEl) latestFilmReviewTextEl.textContent = 'Could not load review text.';
      if (latestFilmExpandBtnEl instanceof HTMLButtonElement) latestFilmExpandBtnEl.classList.add('hidden');
      if (latestFilmLoadingEl) latestFilmLoadingEl.classList.add('hidden');
      if (latestFilmContentEl) {
        latestFilmContentEl.classList.remove('hidden');
        latestFilmContentEl.classList.add('flex');
      }
    }

    // Load latest Serializd episode (best effort)
    try {
      const serializdResponse = await fetch('/api/serializd');
      if (serializdResponse.ok) {
        const serializdData = await serializdResponse.json();
        const serializdStatsEl = document.getElementById('serializd-stats');
        if (serializdStatsEl) {
          const latestEpisode = serializdData?.latestEpisode;
          if (serializdData?.success && latestEpisode?.showTitle) {
            const seasonPart = latestEpisode.season ? `S${latestEpisode.season}` : '';
            const episodePart = latestEpisode.episode ? `E${latestEpisode.episode}` : '';
            const seasonEpisode = `${seasonPart}${episodePart}`.trim();
            serializdStatsEl.textContent = seasonEpisode
              ? `Latest: ${latestEpisode.showTitle} ${seasonEpisode}`
              : `Latest: ${latestEpisode.showTitle}`;
          } else {
            serializdStatsEl.textContent = '7,744+ episodes watched';
          }
        }
      }
    } catch (error) {
      console.error('Error loading Serializd latest episode:', error);
      const serializdStatsEl = document.getElementById('serializd-stats');
      if (serializdStatsEl) {
        serializdStatsEl.textContent = '7,744+ episodes watched';
      }
    }

    // Load Stats.fm stats
    try {
      const statsfmResponse = await fetch('/api/statsfm');
      if (statsfmResponse.ok) {
        const statsfmData = await statsfmResponse.json();
        const statsfmStatsEl = document.getElementById('statsfm-stats');
        if (statsfmStatsEl) {
          if (statsfmData.success && statsfmData.totalMinutes) {
            statsfmStatsEl.textContent = `${statsfmData.totalMinutes.toLocaleString()}+ minutes streamed`;
          } else {
            statsfmStatsEl.textContent = '88,935+ minutes streamed';
          }
        }
      }
    } catch (error) {
      console.error('Error loading Stats.fm stats:', error);
      const statsfmStatsEl = document.getElementById('statsfm-stats');
      if (statsfmStatsEl) {
        statsfmStatsEl.textContent = '88,935+ minutes streamed';
      }
    }
  }

  function formatRating(rating) {
    if (typeof rating !== 'number') return '';
    const normalized = Math.max(0, Math.min(5, rating));
    const fullStars = Math.floor(normalized);
    const hasHalfStar = normalized % 1 >= 0.5;
    const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
    return `${'★'.repeat(fullStars)}${hasHalfStar ? '½' : ''}${'☆'.repeat(Math.max(0, emptyStars))}`;
  }

  function formatWatchedDate(dateValue) {
    const date = new Date(dateValue);
    if (Number.isNaN(date.getTime())) return '';
    return new Intl.DateTimeFormat('en-US', {
      month: 'short',
      day: 'numeric',
      year: 'numeric'
    }).format(date);
  }

  function setLatestFilmExpanded(expanded) {
    latestFilmReviewExpanded = expanded;
    const reviewTextEl = document.getElementById('latest-film-review-text');
    const expandBtnEl = document.getElementById('latest-film-expand-btn');
    if (!reviewTextEl || !(expandBtnEl instanceof HTMLButtonElement)) return;

    if (expanded) {
      reviewTextEl.classList.remove('line-clamp-2');
      expandBtnEl.classList.add('is-expanded');
      expandBtnEl.setAttribute('aria-label', 'Collapse review');
    } else {
      reviewTextEl.classList.add('line-clamp-2');
      expandBtnEl.classList.remove('is-expanded');
      expandBtnEl.setAttribute('aria-label', 'Expand review');
    }
  }

  function updateLatestFilmExpandState(reviewText) {
    const expandBtnEl = document.getElementById('latest-film-expand-btn');
    if (!(expandBtnEl instanceof HTMLButtonElement)) return;

    if (reviewText.length > 160) {
      expandBtnEl.classList.remove('hidden');
      setLatestFilmExpanded(false);
    } else {
      expandBtnEl.classList.add('hidden');
      setLatestFilmExpanded(false);
    }
  }

  // Animate elements on load
  document.addEventListener('DOMContentLoaded', () => {
    loadStats();

    const expandBtnEl = document.getElementById('latest-film-expand-btn');
    if (expandBtnEl instanceof HTMLButtonElement) {
      expandBtnEl.addEventListener('click', () => {
        setLatestFilmExpanded(!latestFilmReviewExpanded);
      });
    }
    
    // Animate elements
    const animateElements = document.querySelectorAll('.animate');
    animateElements.forEach((el, index) => {
      setTimeout(() => {
        el.classList.add('show');
      }, index * 100);
    });
  });
</script>

