            ...item,
            watchedDate: new Date(item.watchedDate)
          }));
          
          // Sort by watched date (latest first) and take top 12
          const sortedItems = itemsWithDates.sort((a, b) =>
            b.watchedDate.getTime() - a.watchedDate.getTime()
