---
import Head from "@components/Head.astro";
import ChatbotContact from "@components/ChatbotContact.astro";
import Analytics from "@vercel/analytics/astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
  </head>
  <body>
    <main style="padding: 0 !important; margin: 0 !important;">
      <slot />
    </main>
    <ChatbotContact />
    <Analytics />
  </body>
</html>

