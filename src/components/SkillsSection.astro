<style>
  /* Hide scrollbar */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const skillsScroll = document.getElementById('skills-scroll');
    if (!skillsScroll) return;
    
    let scrollPosition = 0;
    let isScrolling = false;
    let scrollDirection = 1; // 1 for right, -1 for left
    const scrollSpeed = 0.5; // pixels per frame
    let animationFrameId = null;
    
    // Clone skills for infinite scroll effect
    const originalContent = skillsScroll.innerHTML;
    skillsScroll.innerHTML = originalContent + originalContent;
    
    const scrollWidth = skillsScroll.scrollWidth / 2; // Half because we duplicated
    
    function autoScroll() {
      if (isScrolling) {
        scrollPosition += scrollSpeed * scrollDirection;
        
        // Reset to start when reaching the end
        if (scrollPosition >= scrollWidth) {
          scrollPosition = 0;
        }
        // Reset to end when going backwards
        if (scrollPosition < 0) {
          scrollPosition = scrollWidth - 1;
        }
        
        skillsScroll.scrollLeft = scrollPosition;
        animationFrameId = requestAnimationFrame(autoScroll);
      }
    }
    
    // Pause auto-scroll on hover
    skillsScroll.addEventListener('mouseenter', () => {
      isScrolling = false;
      if (animationFrameId) {
        cancelAnimationFrame(animationFrameId);
      }
    });
    
    // Resume auto-scroll on mouse leave
    skillsScroll.addEventListener('mouseleave', () => {
      isScrolling = true;
      autoScroll();
    });
    
    // Pause on touch/scroll interaction
    let userInteracting = false;
    skillsScroll.addEventListener('touchstart', () => {
      userInteracting = true;
      isScrolling = false;
      if (animationFrameId) {
        cancelAnimationFrame(animationFrameId);
      }
    });
    
    skillsScroll.addEventListener('scroll', () => {
      if (userInteracting) {
        scrollPosition = skillsScroll.scrollLeft;
      }
    });
    
    skillsScroll.addEventListener('touchend', () => {
      setTimeout(() => {
        userInteracting = false;
        isScrolling = true;
        autoScroll();
      }, 2000); // Resume after 2 seconds of no interaction
    });
    
    // Start auto-scroll
    isScrolling = true;
    autoScroll();
  });
</script>
