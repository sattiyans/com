---
// Skills Section Component
---

<div class="space-y-6">
  <h5 class="font-semibold text-black dark:text-white">
    Technologies & Skills
  </h5>
  
  <!-- Backend Technologies -->
  <div>
    <h6 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Backend Development</h6>
    <div class="flex flex-wrap gap-2">
      <span class="px-3 py-1 bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-200 rounded-full text-xs font-medium">
        PHP
      </span>
      <span class="px-3 py-1 bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-200 rounded-full text-xs font-medium">
        Laravel
      </span>
      <span class="px-3 py-1 bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-200 rounded-full text-xs font-medium">
        FilamentPHP
      </span>
      <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 rounded-full text-xs font-medium">
        MySQL
      </span>
      <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 rounded-full text-xs font-medium">
        PostgreSQL
      </span>
      <span class="px-3 py-1 bg-orange-100 dark:bg-orange-900/30 text-orange-800 dark:text-orange-200 rounded-full text-xs font-medium">
        Nginx
      </span>
    </div>
  </div>

  <!-- Frontend Technologies -->
  <div>
    <h6 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Frontend Development</h6>
    <div class="flex flex-wrap gap-2">
      <span class="px-3 py-1 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-200 rounded-full text-xs font-medium">
        JavaScript
      </span>
      <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 rounded-full text-xs font-medium">
        React
      </span>
      <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full text-xs font-medium">
        Next.js
      </span>
      <span class="px-3 py-1 bg-cyan-100 dark:bg-cyan-900/30 text-cyan-800 dark:text-cyan-200 rounded-full text-xs font-medium">
        Tailwind CSS
      </span>
      <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-200 rounded-full text-xs font-medium">
        Bootstrap
      </span>
    </div>
  </div>

  <!-- E-commerce & Platforms -->
  <div>
    <h6 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">E-commerce & Platforms</h6>
    <div class="flex flex-wrap gap-2">
      <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-200 rounded-full text-xs font-medium">
        Shopify
      </span>
      <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-200 rounded-full text-xs font-medium">
        WooCommerce
      </span>
      <span class="px-3 py-1 bg-indigo-100 dark:bg-indigo-900/30 text-indigo-800 dark:text-indigo-200 rounded-full text-xs font-medium">
        SaaS Platforms
      </span>
      <span class="px-3 py-1 bg-pink-100 dark:bg-pink-900/30 text-pink-800 dark:text-pink-200 rounded-full text-xs font-medium">
        Payment Gateways
      </span>
    </div>
  </div>

  <!-- AI & Automation -->
  <div>
    <h6 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">AI & Automation</h6>
    <div class="flex flex-wrap gap-2">
      <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-200 rounded-full text-xs font-medium">
        OpenAI API
      </span>
      <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 rounded-full text-xs font-medium">
        AI Chatbots
      </span>
      <span class="px-3 py-1 bg-orange-100 dark:bg-orange-900/30 text-orange-800 dark:text-orange-200 rounded-full text-xs font-medium">
        n8n Automation
      </span>
      <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-200 rounded-full text-xs font-medium">
        WhatsApp API
      </span>
    </div>
  </div>

  <!-- Tools & Services -->
  <div>
    <h6 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Tools & Services</h6>
    <div class="flex flex-wrap gap-2">
      <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full text-xs font-medium">
        Git
      </span>
      <span class="px-3 py-1 bg-orange-100 dark:bg-orange-900/30 text-orange-800 dark:text-orange-200 rounded-full text-xs font-medium">
        Docker
      </span>
      <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 rounded-full text-xs font-medium">
        VPS Deployment
      </span>
      <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-200 rounded-full text-xs font-medium">
        RapidAPI
      </span>
    </div>
  </div>
</div>
