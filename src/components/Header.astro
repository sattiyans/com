import Link from "@components/Link.astro";
---

<header class="relative !fixed !top-0 !left-0 !right-0 !z-[9999] !py-0 !bg-transparent !backdrop-blur-none">
  <!-- Floating Navigation Pill -->
  <div class="fixed top-4 left-1/2 z-[9999]" id="floating-nav" style="transform: translateX(-50%);">
    <nav class="relative">
      <!-- Burger Menu Button -->
      <button 
        id="burger-menu"
        class="w-12 h-12 rounded-full bg-gray-100 dark:bg-black border border-black/15 dark:border-white/20 shadow-2xl flex items-center justify-center text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white hover:bg-gray-200 dark:hover:bg-black/80 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-black/20 dark:focus:ring-white/20"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg id="burger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="home-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
      </button>
    </nav>
    
    <!-- Horizontal Pill Menu -->
    <div 
      id="dropdown-menu"
      class="absolute top-full left-1/2 -translate-x-1/2 mt-2 bg-gray-100 dark:bg-black border border-black/15 dark:border-white/20 rounded-full shadow-2xl py-3 px-4 opacity-0 invisible pointer-events-none transition-all duration-300 ease-out transform translate-y-2 flex flex-row items-center gap-2 overflow-x-auto scrollbar-hide z-[10000]"
    >
      <Link href="/work" underline={false} class="inline-flex items-center gap-3.5 px-4 py-2.5 rounded-full text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white hover:bg-gray-200 dark:hover:bg-black/80 transition-all duration-200 no-underline whitespace-nowrap">
        <div class="pr-2">
          <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <span class="font-medium text-sm leading-none">Work</span>
      </Link>
