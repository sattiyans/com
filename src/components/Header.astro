---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import ThemeToggle from "@components/ThemeToggle.astro";
import { SITE } from "@consts";
---

<header class="relative">
  <Container>
    <div class="flex items-center justify-between py-4">
      <!-- Logo/Brand -->
      <Link href="/" underline={false} class="group">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-black dark:bg-white rounded-lg flex items-center justify-center group-hover:scale-105 transition-transform duration-200">
            <span class="text-white dark:text-black font-bold text-sm">S</span>
          </div>
          <div class="hidden md:block font-semibold text-black dark:text-white group-hover:text-gray-600 dark:group-hover:text-gray-300 transition-colors duration-200">
            {SITE.NAME}
          </div>
        </div>
      </Link>
      
      <!-- Navigation -->
      <nav class="flex items-center gap-3">
        <Link href="/work" class="px-3 py-1.5 rounded-md text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-200">
          Work
        </Link>
        <Link href="/watched" class="px-3 py-1.5 rounded-md text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-200">
          Watched
        </Link>
        <Link href="/tools" class="px-3 py-1.5 rounded-md text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-200">
          Tools
        </Link>
        <Link href="/uses" class="px-3 py-1.5 rounded-md text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-200">
          Uses
        </Link>
        <ThemeToggle />
      </nav>
    </div>
  </Container>
  
  <!-- Dotkod Solutions Banner -->
  <div>
    <Container>
       <div class="border border-black/15 dark:border-white/20 rounded-lg p-3 sm:p-4 bg-gray-100 dark:bg-white/5 hover:bg-gray-200 dark:hover:bg-white/10 transition-colors duration-300 my-2">
         <div class="flex items-center justify-between gap-2">
           <div class="flex-1 min-w-0">
             <div class="flex items-center gap-2 flex-wrap">
               <span class="text-sm flex-shrink-0">ðŸš€</span>
               <h3 class="text-xs sm:text-sm font-semibold text-gray-900 dark:text-white leading-tight">
                 <span class="hidden sm:inline">Automate Your Business & Save Money with AI</span>
                 <span class="sm:hidden">AI Business Automation</span>
               </h3>
                <span class="px-1.5 py-0.5 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs font-medium rounded flex-shrink-0">
                  via Dotkod
                </span>
             </div>
           </div>
           <div class="flex-shrink-0">
             <Link 
               href="https://dotkod.com" 
               external
               class="flex items-center justify-center w-7 h-7 sm:w-8 sm:h-8 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors duration-200"
             >
               <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
               </svg>
             </Link>
           </div>
        </div>
      </div>
    </Container>
  </div>
</header>
